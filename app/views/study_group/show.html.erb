<h1> Technical Coach Study Group Comments Page (30 days) </h1>
<h2><%= @tc.name %></h2>
  <% if @tc.study_group_ratings.filter_by_star(1).length > 0 && @tc.study_group_ratings.filter_by_star(1).find{|rating| !rating.comment.nil?} %>
    <h2>1 Stars</h2>
    <table class="table table-hover">
      <tbody>
        <% @tc.study_group_ratings.filter_by_star(1).each do |rating| %>
          <tr>
            <% if rating.valid_comment %>
              <td><strong><%= rating.parse_date %></strong>: <%= rating.comment %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
