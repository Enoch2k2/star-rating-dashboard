<h1> Technical Coach Ask A Question Comments Page (<%= @month %>) </h1>
<%= form_tag aaq_search_show_path(@tc.slug) do %>
  <%= select_tag "month", options_for_select(@months, @month) %>
  <%= submit_tag "Search", class: "btn btn-default btn-xs" %>
<% end %>
<h2><%= @tc.name %></h2>
  <% if @tc.get_aaq_ratings_by_month(@month).filter_by_star(1).length > 0 && @tc.get_aaq_ratings_by_month(@month).filter_by_star(1).find{|rating| !rating.comment.nil?} %>
    <h2>1 Stars</h2>
    <table class="table table-hover">
      <tbody>
        <% @tc.get_aaq_ratings_by_month(@month).filter_by_star(1).each do |rating| %>
          <tr>
            <% if rating.valid_comment %>
              <td><strong><%= rating.parse_date %></strong>: <%= rating.comment %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
